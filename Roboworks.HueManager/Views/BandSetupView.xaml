    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid Margin="24">
        
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        
            <TextBlock 
                Grid.Row="0"
                Text="Band Setup" 
                FontSize="32"
                FontWeight="Thin"
                HorizontalAlignment="Center"
            />

            <Grid
                Grid.Row="1"
                VerticalAlignment="Center"
                DataContext="{Binding Path=BandInfo, Mode=OneWay}"
            >

                <TextBlock 
                    x:Name="BandNameTitle"
                    Text="Paired Band:" 
                    HorizontalAlignment="Left"
                    FontWeight="SemiBold"
                />

                <TextBlock 
                    x:Name="BandNameValue"
                    Text="{Binding Path=Name, Mode=OneTime}" 
                    HorizontalAlignment="Right"
                    FontWeight="SemiBold"
                />

            </Grid>

            <StackPanel
                Grid.Row="2"
                Orientation="Vertical"
            >

                <Button 
                    Content="Add tile" 
                    Command="{Binding Path=TileAddCommand, Mode=OneTime}"
                    Margin="0,8"
                    HorizontalAlignment="Stretch"
                />

                <Button 
                    Content="Remove tiles" 
                    Command="{Binding Path=TilesRemoveCommand, Mode=OneTime}"
                    Margin="0,8"
                    HorizontalAlignment="Stretch"
                />

            </StackPanel>

        </Grid>

